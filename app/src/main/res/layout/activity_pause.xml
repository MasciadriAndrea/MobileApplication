<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.activities.PauseActivity"
    android:visibility="visible"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="@drawable/background">">

    <Button
        android:layout_marginTop="46dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Resume"
        android:id="@+id/resumeBtn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Restart"
        android:id="@+id/restartBtn"
        android:layout_below="@+id/resumeBtn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Quit"
        android:id="@+id/quitBtn"
        android:layout_below="@+id/restartBtn"
        android:layout_centerHorizontal="true"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sounds"
        android:id="@+id/soundsToggleButton"
        android:layout_marginRight="50dp"
        android:checked="false"
        android:layout_alignTop="@+id/quitBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/musicToggleButton"
        android:layout_marginLeft="50dp"
        android:checked="false"
        android:layout_alignBottom="@+id/quitBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Music"
        android:id="@+id/textView"
        android:layout_below="@+id/musicToggleButton"
        android:layout_alignLeft="@+id/musicToggleButton"
        android:layout_alignStart="@+id/musicToggleButton"
        android:layout_alignParentStart="false"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sounds"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/soundsToggleButton"
        android:layout_alignEnd="@+id/soundsToggleButton" />


</RelativeLayout>