<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.activities.PauseActivity"
    android:visibility="visible"
    android:id="@+id/pause"
    android:background="#ffaacdff" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Music"
            android:id="@+id/textView"
            android:autoText="false"
            android:textColor="#ff3d210d" />
        <ToggleButton
            android:text="Music"
            android:id="@+id/musicToggleButton"
            android:checked="false"
            android:layout_marginRight="50dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/toggle_btn"
            android:textOn=""
            android:textOff=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sounds"
            android:id="@+id/textView2"
            android:textColor="#ff3d210d" />
        <ToggleButton
            android:text="Sounds"
            android:id="@+id/soundsToggleButton"
            android:layout_marginRight="50dp"
            android:checked="false"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/toggle_btn"
            android:textOn=""
            android:textOff=""/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Resume"
        android:id="@+id/resumeBtn"
        android:onClick="onResumeBtn"
        android:background="@drawable/button_custom"
        android:textColor="#ff3d210d" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Restart"
        android:id="@+id/restartBtn"
        android:onClick="onRestartBtn"
        android:background="@drawable/button_custom"
        android:textColor="#ff3d210d" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Quit"
        android:id="@+id/quitBtn"
        android:onClick="onQuitBtn"
        android:background="@drawable/button_custom"
        android:textColor="#ff3d210d" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>