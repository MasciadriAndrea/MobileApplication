<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.polimi.activities.ChoosePlayerActivity"
    android:background="#ffaacdff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6"
            android:id="@+id/or"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/backbtn"
                android:background="@drawable/back"
                android:onClick="backButton"
                android:layout_marginRight="10dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:id="@+id/ve">
                <TextView
                    android:text="TYPE YOUR NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label"
                    android:textColor="#ff3d210d"
                    android:textSize="35dp" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:background="@drawable/name_edit"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/label"
        android:layout_centerHorizontal="true"
        android:maxLength="8"
        android:textAlignment="center"
        android:textColor="#ff3d210d"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:background="@drawable/ok"
        android:onClick="onClickB"
        android:layout_marginLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/resumeBtn"
        android:layout_centerHorizontal="true" />
    </LinearLayout>


                <ListView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView"
                    android:layout_below="@+id/resumeBtn"
                    android:layout_centerHorizontal="true"
                    android:choiceMode="singleChoice"
                    android:background="#ff3d210d" />
                </LinearLayout>
            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/skip"
                android:id="@+id/skip"
                android:onClick="onClickSkip"
                android:layout_marginLeft="10dp" />
                />
            </LinearLayout>


</RelativeLayout>