<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.polimi.activities.SettingsActivity"
    android:id="@+id/set"
    android:background="#ffaacdff"
    >
    <Button
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/saveb"
        android:onClick="onSave"
        android:background="@drawable/back"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">
        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Settings"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff3d210d" />

        </LinearLayout>
        <GridLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:id="@+id/b">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center">
                <TextView
                    android:textSize="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sound"
                    android:id="@+id/textView4"
                    android:textColor="#ff3d210d"
                    android:layout_gravity="center_horizontal" />
                <ToggleButton
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/toggle_btn"
                    android:textOn=""
                    android:textOff=""
                    android:id="@+id/soundb"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center">
                <TextView
                    android:textSize="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Animations"
                    android:id="@+id/textView5"
                    android:textColor="#ff3d210d"
                    android:layout_gravity="center_horizontal" />
                <ToggleButton
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/animationsb"
                    android:background="@drawable/toggle_btn"
                    android:textOn=""
                    android:textOff=""
                    />

            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center|center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:textSize="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Music"
                    android:id="@+id/textView"
                    android:textColor="#ff3d210d"
                    android:layout_gravity="center_horizontal" />
                <ToggleButton
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/musicb"
                    android:background="@drawable/toggle_btn"
                    android:textOn=""
                    android:textOff=""
                    />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Number of seeds"
                    android:id="@+id/textView6"
                    android:textColor="#ff3d210d" />
                <NumberPicker
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:id="@+id/np"
                    android:textColor="#ff3d210d"/>
            </LinearLayout>
            </GridLayout>

    </LinearLayout>

</RelativeLayout>
